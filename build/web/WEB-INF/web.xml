<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>MyServlet</servlet-name>
        <servlet-class>controllers.MyServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>MyServlet</servlet-name>
        <url-pattern>/MyServlet</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>Login</servlet-name>
        <servlet-class>controllers.Login</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    
    <!-- READ Students -->
    <servlet>
        <servlet-name>StudentServlet</servlet-name>
        <servlet-class>controllers.StudentServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>StudentServlet</servlet-name>
        <url-pattern>/students</url-pattern>
    </servlet-mapping>
    
    <!-- CREATE Students -->
    <servlet>
        <servlet-name>InsertStudent</servlet-name>
        <servlet-class>controllers.InsertStudent</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>InsertStudent</servlet-name>
        <url-pattern>/InsertStudent</url-pattern>
    </servlet-mapping>
    
    <!-- UPDATE Student -->
    <servlet>
        <servlet-name>UpdateStudent</servlet-name>
        <servlet-class>controllers.UpdateStudent</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UpdateStudent</servlet-name>
        <url-pattern>/UpdateStudent</url-pattern>
    </servlet-mapping>
    
    <!-- DELETE Student -->
    <servlet>
        <servlet-name>DeleteStudent</servlet-name>
        <servlet-class>controllers.DeleteStudent</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DeleteStudent</servlet-name>
        <url-pattern>/DeleteStudent</url-pattern>
    </servlet-mapping>
    
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
